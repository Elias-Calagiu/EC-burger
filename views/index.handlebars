<div class="container">
    <div class="row">
        <div class="col-sm-4" id="burger-form">
            <h1>Eat-da-Burger</h1>
            <h2>UnDevoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless isDevoured}}
                {{> burgers/burger-block isDevoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<h2>Add a burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>
