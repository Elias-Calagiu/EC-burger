<h1>Eat-da-Burger</h1>
<h2>UnDevoured Burgers</h2>
<ul>
  {{#each burgers}}
  {{#unless isDevoured}}
  {{> burgers/burger-block isDevoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if isDevoured}}
  {{> burgers/burger-block isDevoured=false}}
  {{/if}}
  {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burger">Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  
   <div class="form-group">
    <label for="isDevoured">Devoured?</label><br>
    <input type="radio" name="isDevoured" value="1" checked> Devoured!<br>
    <input type="radio" name="isDevoured" value="0"> Not Devoured
  </div>
  <button type="submit">Add Burger</button>
</form>